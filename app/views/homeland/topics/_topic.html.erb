<tr class="topic">
  <td class="title">
    <%= link_to topic.title, homeland.topic_path(topic) %>
  </td>
  <td class="node">
    <%= node_tag(topic.node) %>
  </td>
  <td class="author">
    <%= user_avatar_tag(topic) %>
  </td>
  <td class="replies">
    <%= topic.replies_count %>
  </td>

  <% if action_name == 'hot'%>
    <td class="replies">
      <%= params[:type] == 'day' ? topic.last_day_score : topic.last_week_score %>
    </td>
  <% end%>
  <td class="activity">
    <%= timeago topic.activity_at %>
  </td>
</tr>
